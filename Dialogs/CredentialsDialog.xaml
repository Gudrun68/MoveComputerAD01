<Window x:Class="MoveComputerAD01.Dialogs.CredentialsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AD-Anmeldedaten" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Active Directory Anmeldedaten" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>

        <!-- Domain -->
        <TextBlock Grid.Row="2" Text="DomÃ¤ne:"/>
        <TextBox Grid.Row="3" Name="DomainTextBox" Text="lps-berlin.de" Margin="0,5,0,0"/>

        <!-- Username -->
        <TextBlock Grid.Row="5" Text="Benutzername:"/>
        <TextBox Grid.Row="6" Name="UsernameTextBox" Margin="0,5,0,0"/>

        <!-- Password -->
        <TextBlock Grid.Row="8" Text="Passwort:"/>
        <PasswordBox Grid.Row="9" Name="PasswordBox" Margin="0,5,0,0"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Abbrechen" Width="80" Height="30" Margin="0,0,10,0" 
                    Click="CancelButton_Click"/>
            <Button Content="OK" Width="80" Height="30" IsDefault="True"
                    Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
